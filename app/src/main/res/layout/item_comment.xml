<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/people_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/people_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ad_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="길 잃은"

            android:textColor="@color/black"
            android:textSize="16dp"

            app:layout_constraintStart_toEndOf="@+id/people_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/writer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="호랑이"

            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/ad_txt"
            app:layout_constraintStart_toEndOf="@+id/ad_txt"
            app:layout_constraintTop_toTopOf="@+id/ad_txt" />

        <TextView
            android:id="@+id/comment_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/pretendard_medium"
            android:paddingBottom="20dp"
            android:text="오늘 급식 꽤갠ㅎ\n사실 안 괜 ㅎ"
            android:textColor="@color/black"

            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/people_icon"
            app:layout_constraintTop_toBottomOf="@+id/ad_txt" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>